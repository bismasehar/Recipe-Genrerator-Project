@model IEnumerable<MyRecipe.Models.User>

@{
    ViewData["Title"] = "Manage Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="px-6 py-6">
    <div class="flex justify-between items-center mb-4">
        <h2 class="text-2xl font-bold text-slate-700">👤 Manage Users</h2>
        <a asp-action="Create" class="bg-blue-600 text-white px-4 py-2 rounded shadow hover:bg-blue-700 font-medium">
            ➕ Create New
        </a>
    </div>

    <div class="overflow-x-auto bg-white shadow-md rounded-lg">
        <table class="min-w-full text-left text-sm">
            <thead class="bg-blue-500 text-white">
                <tr>
                    <th class="px-6 py-3 font-semibold">Email</th>
                    <th class="px-6 py-3 font-semibold">Password Hash</th>
                    <th class="px-6 py-3 font-semibold text-center">Actions</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
                @foreach (var item in Model)
                {
                    <tr class="hover:bg-gray-50">
                        <td class="px-6 py-4">@item.Email</td>
                        <td class="px-6 py-4 break-all">@item.PasswordHash</td>
                        <td class="px-6 py-4 text-center space-x-2">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="text-indigo-600 hover:underline">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="text-blue-600 hover:underline">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="text-red-600 hover:underline">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
