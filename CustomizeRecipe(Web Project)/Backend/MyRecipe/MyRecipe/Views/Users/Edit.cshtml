@model MyRecipe.Models.User

@{
    ViewData["Title"] = "Edit User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="px-6 py-6">
    <h2 class="text-2xl font-bold text-slate-700 mb-4">✏️ Edit User</h2>

    <div class="bg-white shadow-md rounded-lg p-6 max-w-xl">
        <form asp-action="Edit" class="space-y-5">
            <div asp-validation-summary="ModelOnly" class="text-red-500"></div>
            <input type="hidden" asp-for="Id" />

            <div>
                <label asp-for="Email" class="block font-medium text-slate-600 mb-1"></label>
                <input asp-for="Email" class="w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500" />
                <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label asp-for="PasswordHash" class="block font-medium text-slate-600 mb-1"></label>
                <input asp-for="PasswordHash" class="w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500" />
                <span asp-validation-for="PasswordHash" class="text-red-500 text-sm"></span>
            </div>

            <div class="flex items-center space-x-3">
                <input type="submit" value="💾 Save" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700" />
                <a asp-action="Index" class="text-gray-600 hover:underline">← Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
