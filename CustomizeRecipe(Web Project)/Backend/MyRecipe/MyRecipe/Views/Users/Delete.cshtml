@model MyRecipe.Models.User

@{
    ViewData["Title"] = "Delete User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="px-6 py-6">
    <h2 class="text-2xl font-bold text-red-600 mb-4">⚠️ Confirm Delete</h2>

    <div class="bg-white shadow-md rounded-lg p-6 max-w-xl">
        <p class="text-gray-800 mb-4">Are you sure you want to delete this user?</p>

        <dl class="divide-y divide-gray-200 text-sm text-slate-700 mb-6">
            <div class="py-3">
                <dt class="font-semibold">Email</dt>
                <dd class="mt-1 text-gray-700">@Model.Email</dd>
            </div>
            <div class="py-3">
                <dt class="font-semibold">Password Hash</dt>
                <dd class="mt-1 text-gray-700">@Model.PasswordHash</dd>
            </div>
        </dl>

        <form asp-action="Delete" class="flex gap-4">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="bg-red-600 text-white px-4 py-2 rounded hover:bg-red-700">
                🗑️ Delete
            </button>
            <a asp-action="Index" class="text-gray-600 hover:underline">← Cancel</a>
        </form>
    </div>
</div>
