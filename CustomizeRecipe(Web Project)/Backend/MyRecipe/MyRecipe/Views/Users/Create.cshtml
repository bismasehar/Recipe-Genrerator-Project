@model MyRecipe.Models.User

@{
    ViewData["Title"] = "Create User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="px-6 py-6">
    <h2 class="text-2xl font-bold text-slate-700 mb-6">➕ Create New User</h2>

    <div class="bg-white rounded-lg shadow p-6 max-w-xl">
        <form asp-action="Create" class="space-y-5">
            <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm"></div>

            <div>
                <label asp-for="Email" class="block text-sm font-medium text-slate-700">Email</label>
                <input asp-for="Email" class="mt-1 block w-full rounded border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" />
                <span asp-validation-for="Email" class="text-red-500 text-xs"></span>
            </div>

            <div>
                <label asp-for="PasswordHash" class="block text-sm font-medium text-slate-700">Password</label>
                <input asp-for="PasswordHash" class="mt-1 block w-full rounded border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" />
                <span asp-validation-for="PasswordHash" class="text-red-500 text-xs"></span>
            </div>

            <div class="flex items-center justify-between">
                <button type="submit" class="bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700">
                    ✅ Create
                </button>
                <a asp-action="Index" class="text-sm text-gray-600 hover:underline">← Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
