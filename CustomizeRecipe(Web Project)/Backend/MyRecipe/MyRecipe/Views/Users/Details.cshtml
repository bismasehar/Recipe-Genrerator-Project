@model MyRecipe.Models.User

@{
    ViewData["Title"] = "User Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="px-6 py-6">
    <h2 class="text-2xl font-bold text-slate-700 mb-4">👤 User Details</h2>

    <div class="bg-white shadow-md rounded-lg p-6 max-w-xl">
        <dl class="divide-y divide-gray-200 text-sm text-slate-700">
            <div class="py-3">
                <dt class="font-semibold">Email</dt>
                <dd class="mt-1 text-gray-700">@Model.Email</dd>
            </div>
            <div class="py-3">
                <dt class="font-semibold">Password Hash</dt>
                <dd class="mt-1 text-gray-700">@Model.PasswordHash</dd>
            </div>
        </dl>

        <div class="mt-6 flex items-center gap-4">
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">
                ✏️ Edit
            </a>
            <a asp-action="Index" class="text-gray-600 hover:underline">← Back to List</a>
        </div>
    </div>
</div>
