@model MyRecipe.Models.Rating

@{
    ViewData["Title"] = "Create Rating";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="px-6 py-4 max-w-xl mx-auto">
    <h1 class="text-2xl font-bold text-blue-600 mb-4">➕ Create New Rating</h1>

    <div class="bg-white rounded-lg shadow-md p-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-red-600 mb-4"></div>

            <div class="mb-4">
                <label asp-for="RecipeId" class="block text-sm font-medium text-slate-700 mb-1">Recipe</label>
                <select asp-for="RecipeId" asp-items="ViewBag.RecipeId" class="w-full px-3 py-2 border border-slate-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500">
                    <option value="">-- Select Recipe --</option>
                </select>
            </div>

            <div class="mb-4">
                <label asp-for="Score" class="block text-sm font-medium text-slate-700 mb-1">Score</label>
                <input asp-for="Score" class="w-full px-3 py-2 border border-slate-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500" />
                <span asp-validation-for="Score" class="text-red-600 text-sm"></span>
            </div>

            <div class="flex items-center gap-4 mt-6">
                <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded shadow">
                    ➕ Create
                </button>

                <a asp-action="Index" class="text-blue-600 hover:underline font-medium">
                    ← Back to List
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
