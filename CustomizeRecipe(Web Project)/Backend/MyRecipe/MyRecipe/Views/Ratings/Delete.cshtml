@model MyRecipe.Models.Rating

@{
    ViewData["Title"] = "Delete Rating";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="px-6 py-4 max-w-2xl mx-auto">
    <h1 class="text-2xl font-bold text-red-600 mb-4">🗑️ Delete Rating</h1>
    <p class="text-slate-600 mb-6 text-md">Are you sure you want to delete this rating? This action cannot be undone.</p>

    <div class="bg-white rounded-lg shadow-md p-6">
        <dl class="space-y-4">
            <div>
                <dt class="text-sm font-semibold text-slate-600">Score</dt>
                <dd class="mt-1 text-lg text-slate-800">@Model.Score</dd>
            </div>

            <div>
                <dt class="text-sm font-semibold text-slate-600">Created At</dt>
                <dd class="mt-1 text-lg text-slate-800">@Model.CreatedAt</dd>
            </div>

            <div>
                <dt class="text-sm font-semibold text-slate-600">Recipe ID</dt>
                <dd class="mt-1 text-lg text-slate-800">@Model.Recipe?.Id</dd>
            </div>
        </dl>
    </div>

    <form asp-action="Delete" class="mt-6 flex items-center gap-4">
        <input type="hidden" asp-for="Id" />

        <button type="submit" class="bg-red-600 hover:bg-red-700 text-white font-semibold py-2 px-4 rounded shadow">
            🚫 Delete
        </button>

        <a asp-action="Index" class="text-blue-600 hover:underline font-medium">
            ← Back to List
        </a>
    </form>
</div>
