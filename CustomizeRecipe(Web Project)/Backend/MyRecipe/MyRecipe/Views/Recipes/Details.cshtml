@model MyRecipe.Models.Recipe

@{
    ViewData["Title"] = "Recipe Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="max-w-4xl mx-auto mt-10 bg-white p-8 rounded-lg shadow-md">
    <h2 class="text-2xl font-bold text-slate-700 mb-6">📖 Recipe Details</h2>

    <!-- ✅ Display Title at the top -->
    <div class="mb-6">
        <dt class="text-sm font-medium text-slate-500">Title</dt>
        <dd class="mt-1 text-xl text-slate-800 font-semibold">@Html.DisplayFor(model => model.Title)</dd>
    </div>

    <dl class="grid grid-cols-1 sm:grid-cols-2 gap-x-6 gap-y-4">
        <div>
            <dt class="text-sm font-medium text-slate-500">Ingredients</dt>
            <dd class="mt-1 text-base text-slate-700">@Html.DisplayFor(model => model.Ingredients)</dd>
        </div>

        <div>
            <dt class="text-sm font-medium text-slate-500">Instructions</dt>
            <dd class="mt-1 text-base text-slate-700">@Html.DisplayFor(model => model.Instructions)</dd>
        </div>

        <div>
            <dt class="text-sm font-medium text-slate-500">Created By</dt>
            <dd class="mt-1 text-base text-slate-700">@Html.DisplayFor(model => model.CreatedBy)</dd>
        </div>

        <div>
            <dt class="text-sm font-medium text-slate-500">Created At</dt>
            <dd class="mt-1 text-base text-slate-700">@Html.DisplayFor(model => model.CreatedAt)</dd>
        </div>
    </dl>

    <div class="mt-8 flex justify-between">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 shadow">Edit</a>
        <a asp-action="Index" class="text-slate-500 hover:underline">← Back to List</a>
    </div>
</div>
