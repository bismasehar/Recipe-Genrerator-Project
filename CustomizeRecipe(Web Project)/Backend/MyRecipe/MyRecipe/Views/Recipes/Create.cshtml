@model MyRecipe.Models.Recipe

@{
    ViewData["Title"] = "Create Recipe";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="max-w-3xl mx-auto mt-10 bg-white p-8 rounded-lg shadow">
    <h2 class="text-2xl font-bold text-slate-800 mb-6">📝 Create New Recipe</h2>

    <form asp-action="Create" class="space-y-6">
        <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm"></div>

        <!-- ✅ Title Field -->
        <div>
            <label asp-for="Title" class="block text-slate-700 font-medium mb-1"></label>
            <input asp-for="Title" class="w-full border border-slate-300 rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" />
            <span asp-validation-for="Title" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="Ingredients" class="block text-slate-700 font-medium mb-1"></label>
            <input asp-for="Ingredients" class="w-full border border-slate-300 rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" />
            <span asp-validation-for="Ingredients" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="Instructions" class="block text-slate-700 font-medium mb-1"></label>
            <input asp-for="Instructions" class="w-full border border-slate-300 rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" />
            <span asp-validation-for="Instructions" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="CreatedBy" class="block text-slate-700 font-medium mb-1"></label>
            <input asp-for="CreatedBy" class="w-full border border-slate-300 rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" />
            <span asp-validation-for="CreatedBy" class="text-red-500 text-sm"></span>
        </div>

        <div class="flex items-center gap-4">
            <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white px-5 py-2 rounded shadow">
                ➕ Create
            </button>
            <a asp-action="Index" class="text-slate-600 hover:underline">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
