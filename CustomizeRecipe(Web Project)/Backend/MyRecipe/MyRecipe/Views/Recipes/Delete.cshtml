@model MyRecipe.Models.Recipe

@{
    ViewData["Title"] = "Delete Recipe";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="max-w-xl mx-auto mt-10 bg-white p-8 rounded-lg shadow">
    <h2 class="text-2xl font-bold text-red-600 mb-4">⚠️ Delete Recipe</h2>

    <p class="text-slate-700 mb-4 text-center">Are you sure you want to permanently delete this recipe?</p>

    <!-- ✅ Title display -->
    <p class="text-xl text-center font-semibold text-slate-800 mb-6">
        🧾 <span class="italic">@Html.DisplayFor(model => model.Title)</span>
    </p>

    <div class="grid grid-cols-1 gap-4 mb-6">
        <div>
            <dt class="text-sm font-semibold text-slate-500">Ingredients</dt>
            <dd class="mt-1 text-base text-slate-700">@Html.DisplayFor(model => model.Ingredients)</dd>
        </div>
        <div>
            <dt class="text-sm font-semibold text-slate-500">Instructions</dt>
            <dd class="mt-1 text-base text-slate-700">@Html.DisplayFor(model => model.Instructions)</dd>
        </div>
        <div>
            <dt class="text-sm font-semibold text-slate-500">Created By</dt>
            <dd class="mt-1 text-base text-slate-700">@Html.DisplayFor(model => model.CreatedBy)</dd>
        </div>
        <div>
            <dt class="text-sm font-semibold text-slate-500">Created At</dt>
            <dd class="mt-1 text-base text-slate-700">@Html.DisplayFor(model => model.CreatedAt)</dd>
        </div>
    </div>

    <form asp-action="DeleteConfirmed" method="post" class="flex items-center justify-between">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="bg-red-600 hover:bg-red-700 text-white font-semibold px-6 py-2 rounded shadow">
            Yes, Delete
        </button>
        <a asp-action="Index" class="text-blue-600 hover:underline font-medium">Cancel</a>
    </form>
</div>
