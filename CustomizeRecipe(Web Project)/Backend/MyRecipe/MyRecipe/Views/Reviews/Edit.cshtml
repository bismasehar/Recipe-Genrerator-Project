@model MyRecipe.Models.Review

@{
    ViewData["Title"] = "Edit Review";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="px-6 py-6">
    <h2 class="text-2xl font-bold text-blue-600 mb-6">✏️ Edit Review</h2>

    <div class="bg-white shadow-lg rounded-lg p-6 w-full max-w-xl">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-red-500 mb-4"></div>
            <input type="hidden" asp-for="Id" />

            <div class="mb-4">
                <label asp-for="RecipeId" class="block text-sm font-semibold text-slate-700 mb-1"></label>
                <select asp-for="RecipeId" class="w-full px-4 py-2 border border-slate-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" asp-items="ViewBag.RecipeId"></select>
                <span asp-validation-for="RecipeId" class="text-red-500 text-sm"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Comment" class="block text-sm font-semibold text-slate-700 mb-1"></label>
                <input asp-for="Comment" class="w-full px-4 py-2 border border-slate-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" />
                <span asp-validation-for="Comment" class="text-red-500 text-sm"></span>
            </div>

            <div class="mb-4">
                <label asp-for="CreatedAt" class="block text-sm font-semibold text-slate-700 mb-1"></label>
                <input asp-for="CreatedAt" class="w-full px-4 py-2 border border-slate-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" />
                <span asp-validation-for="CreatedAt" class="text-red-500 text-sm"></span>
            </div>

            <div class="flex justify-between items-center mt-6">
                <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded shadow">
                    💾 Save
                </button>
                <a asp-action="Index" class="text-slate-600 hover:text-blue-600 underline">← Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
