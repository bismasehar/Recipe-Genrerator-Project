@model MyRecipe.Models.Review

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="px-6 py-6">
    <h2 class="text-2xl font-bold text-slate-700 mb-6">📝 Create New Review</h2>

    <div class="bg-white shadow-lg rounded-lg p-6 w-full max-w-2xl">
        <form asp-action="Create" class="space-y-5">
            <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm"></div>

            <div>
                <label asp-for="RecipeId" class="block text-slate-700 font-medium mb-1">Recipe</label>
                <select asp-for="RecipeId" asp-items="ViewBag.RecipeId"
                        class="w-full border border-gray-300 rounded px-4 py-2 bg-white text-slate-700 focus:outline-none focus:ring-2 focus:ring-blue-500">
                </select>
                <span asp-validation-for="RecipeId" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label asp-for="Comment" class="block text-slate-700 font-medium mb-1">Comment</label>
                <input asp-for="Comment"
                       class="w-full border border-gray-300 rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" />
                <span asp-validation-for="Comment" class="text-red-500 text-sm"></span>
            </div>

            <div class="flex items-center justify-between">
                <button type="submit" class="bg-blue-600 text-white font-semibold px-6 py-2 rounded hover:bg-blue-700 shadow">
                    ➕ Create
                </button>
                <a asp-action="Index" class="text-blue-600 hover:underline font-medium">← Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
