@model MyRecipe.Models.Review

@{
    ViewData["Title"] = "Delete Review";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="px-6 py-6">
    <h2 class="text-2xl font-bold text-red-600 mb-6">❗ Delete Review</h2>

    <div class="bg-white shadow-lg rounded-lg p-6 w-full max-w-2xl">
        <p class="text-slate-700 mb-4 text-lg font-semibold">Are you sure you want to delete this review?</p>

        <dl class="divide-y divide-slate-200 mb-6">
            <div class="py-4 flex justify-between">
                <dt class="text-slate-600 font-medium">Comment:</dt>
                <dd class="text-slate-900">@Html.DisplayFor(model => model.Comment)</dd>
            </div>
            <div class="py-4 flex justify-between">
                <dt class="text-slate-600 font-medium">Created At:</dt>
                <dd class="text-slate-900">@Html.DisplayFor(model => model.CreatedAt)</dd>
            </div>
            <div class="py-4 flex justify-between">
                <dt class="text-slate-600 font-medium">Recipe Title:</dt>
                <dd class="text-slate-900">@Html.DisplayFor(model => model.Recipe.Title)</dd>
            </div>
        </dl>

        <form asp-action="Delete" class="flex items-center justify-between">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="bg-red-600 hover:bg-red-700 text-white font-semibold py-2 px-5 rounded shadow">
                🗑️ Confirm Delete
            </button>
            <a asp-action="Index" class="text-blue-600 hover:underline font-medium ml-4">← Back to List</a>
        </form>
    </div>
</div>
